---
import CIcon from './icons/CIcon.astro';
import MakefileIcon from './icons/MakefileIcon.astro';

const TAGS = {
	C: {
		name: 'C',
		class: 'bg-black text-white',
		icon: CIcon,
	},
	MAKEFILE: {
		name: 'Makefile',
		class: 'bg-black text-white',
		icon: MakefileIcon,
	},
}
const PROJECTS = [
	{
		title: '42 Cursus',
		description: '42 Cursus is a project that contains all the projects that I have done during my time at 42 Malaga.',
		link: 'https://www.github.com',
		image: '/proyects/portfolio.webp',
		github: 'https://www.github.com',
		tags: [TAGS.C, TAGS.MAKEFILE]
	}
]
---

<section class="flex flex-col gap-y-16">
{
	PROJECTS.map(project => (
		<article>
			<h3 class="text-2xl font-semibold text-yellow-800 dark:text-yellow-200 mb-2">{project.title}</h3>
			<p  class="text-lg mb-4 text-pretty">{project.description}</p>
			<ul class="flex gap-x-2 flex-row mb-2 ">
				{project.tags.map(tag => (
					<li class="">
						<span class={`flex gap-x-2 rounded-full text-xs ${tag.class} items-center py-1 px-2 `}>
							<tag.icon class="size-6" />
							{tag.name}
						</span>
					</li>
				))}
			</ul>
			<img 
				loading="lazy"
          		class="rounded shadow-2xl shadow-white/10 "
				src={project.image}
				alt={`Proyect Screenshot from ${project.title}`}
			/>
		</article>
	))
}
</section>